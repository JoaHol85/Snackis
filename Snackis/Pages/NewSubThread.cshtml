@page
@model Snackis.Pages.Shared.NewSubThreadModel
@{
}

<div class="card">
    <form method="post" enctype="multipart/form-data">
        <div class="card-body">
            <div class="card-header text-center">
                <h3>NY TRÅD</h3>
            </div>
            <label class="mt-3">Tråd överskrift:</label><br />
            <input type="text" name="ASubThread.HeaderText" style="width:100%" /><br />
            <label class="mt-3">Text:</label><br />
            <textarea cols="149" rows="10" name="AMessage.TextMessage"></textarea>
            <div class="row">
                <div class="col-md-4">
                    <input type="file" id="file1" name="file1" class="ml-3" />
                </div>
                <div class="col-md-4">
                    <input type="file" id="file2" name="file2" />
                </div>
                <div class="col-md-4">
                    <input type="file" id="file3" name="file3" />
                </div>
            </div>
            <input type="hidden" name="ASubThread.MainThreadId" value="@Model.MainThreadId" />
        </div>
        <div class="card-footer text-center">
            <button type="submit" class="btn btn-primary">Skapa Tråd</button>
        </div>
    </form>
</div>