@page
@model Snackis.Pages.Admin.ReportedMessagesModel
@{
}

<div class="text-center m-3">
    <h1>Anmälda Meddelanden</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card text-center">
            <table class="table">
                <tr>
                    <th colspan="3">1-5</th>
                </tr>
                <tr style="background-color:grey">
                    <th>ID</th>
                    <th>SKAPAD</th>
                    <th>ANMÄLD</th>
                </tr>
                @foreach (var message in Model.ReportedMessages.Where(r => r.TimesReported <= 5))
                {
                    <tr>

                        <td><a href="../ReportMessagePage?ReportedMessageId=@message.Id">@message.Id</a></td>
                        <td>@message.Time</td>
                        <td>@message.TimesReported</td>
                    </tr>
                }
            </table>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-center">
            <table class="table">
                <tr>
                    <th colspan="3">6-10</th>
                </tr>
                <tr style="background-color:grey">
                    <th>ID</th>
                    <th>SKAPAD</th>
                    <th>ANMÄLD</th>
                </tr>
                @if (Model.ReportedMessages.Where(r => r.TimesReported >= 6 && r.TimesReported <= 10) != null)
                {
                    @foreach (var message in Model.ReportedMessages.Where(r => r.TimesReported >= 6 && r.TimesReported <= 10))
                    {
                        <tr>

                            <td><a href="../ReportMessagePage?ReportedMessageId=@message.Id">@message.Id</a></td>
                            <td>@message.Time</td>
                            <td>@message.TimesReported</td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-center">
            <table class="table">
                <tr>
                    <th colspan="3">11+</th>
                </tr>
                <tr style="background-color:grey">
                    <th>ID</th>
                    <th>SKAPAD</th>
                    <th>ANMÄLD</th>
                </tr>
                @if (Model.ReportedMessages.Where(r => r.TimesReported >= 11) != null)
                {
                    @foreach (var message in Model.ReportedMessages.Where(r => r.TimesReported >= 11))
                    {
                        <tr>

                            <td><a href="../ReportMessagePage?ReportedMessageId=@message.Id">@message.Id</a></td>
                            <td>@message.Time</td>
                            <td>@message.TimesReported</td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
</div>